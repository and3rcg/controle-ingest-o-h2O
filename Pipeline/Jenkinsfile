pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    docker.build('backend', '-f backend/Dockerfile .')
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh 'docker-compose down'
                    sh 'docker-compose up -d --build'
                }
            }
        }
    }
}
