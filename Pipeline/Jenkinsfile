pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = credentials('docker-hub-credentials')
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Inicializa o repositório Git se necessário
                    if (!fileExists('controle-ingest-o-h2O/.git')) {
                        sh 'mkdir -p controle-ingest-o-h2O && cd controle-ingest-o-h2O && git init'
                    }
                    dir('controle-ingest-o-h2O') {
                        // Check out the repository into the workspace
                        git branch: 'main', credentialsId: '2e1d8568-5348-45ff-8336-11103c08687b', url: 'https://github.com/arimateiajuniorunifor/controle-ingest-o-h2O.git'
                    }
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    dir('controle-ingest-o-h2O') {
                        // Build Docker images using docker-compose
                        sh 'docker-compose up --build -d'
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Assuming your test script is inside the backend container
                    sh 'docker exec controle-h2o_backend ./run-tests.sh'
                }
            }
        }

        stage('Build and Push Docker Images') {
            when {
                expression { currentBuild.result == null || currentBuild.result == 'SUCCESS' }
            }
            steps {
                script {
                    dir('controle-ingest-o-h2O') {
                        // Build Docker images
                        sh 'docker-compose build'
                        // Log in to Docker Hub and push images
                        sh """
                        docker login -u ${DOCKER_HUB_CREDENTIALS_USR} -p ${DOCKER_HUB_CREDENTIALS_PSW}
                        docker-compose push
                        """
                    }
                }
            }
        }

        stage('Run Application') {
            when {
                expression { currentBuild.result == 'SUCCESS' }
            }
            steps {
                script {
                    dir('controle-ingest-o-h2O') {
                        // Start the application using docker-compose
                        sh 'docker-compose up -d app_backend'
                    }
                }
            }
        }
    }

    post {
        always {
            script {
                def message = currentBuild.result == 'SUCCESS' ? "Build and Tests Passed" : "Build or Tests Failed"
                sendTelegramNotification(message)
                sendSlackNotification(message)
            }
        }
    }
}

def sendTelegramNotification(message) {
    sh """
    curl -s -X POST https://api.telegram.org/bot${TELEGRAM_TOKEN}/sendMessage \
    -d chat_id=${TELEGRAM_CHAT_ID} \
    -d text="${message}"
    """
}

def sendSlackNotification(message) {
    sh """
    curl -X POST --data-urlencode "payload={\\"text\\": \\"${message}\\"}" ${SLACK_WEBHOOK_URL}
    """
}
